<Window x:Class="VisualControls.ModalContentHandler.ModalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ModalDialog" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ContentPresenter Grid.Row="0"
                          Content="{Binding}">

        </ContentPresenter>
        <StackPanel Grid.Row="1" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="Exit" Height="20" Width="40" Margin="3" Click="Button_Exit_Click" />
            <Button Content="Cancel" Height="20" Width="40" Margin="3" Click="Button_Cancel_Click" />
            <Button Content="Save" Height="20" Width="40" Margin="3" Click="Button_Save_Click" />
            <Button Content="OK" Height="20" Width="40" Margin="3" Click="Button_Ok_Click" />
        </StackPanel>
    </Grid>
</Window>
